# Database
DATABASE_URL="mongodb+srv://username:password@cluster.mongodb.net/mydb"

# Better auth
BETTER_AUTH_SECRET=hash-secret-for-better-auth
BETTER_AUTH_GOOGLE_ID=your-auth-google-id
BETTER_AUTH_GOOGLE_SECRET=your-auth-google-secret

# APP URL
NEXT_PUBLIC_BETTER_AUTH_URL="http://localhost:3000"

# AI Models
# Get your Gemini API key from: https://ai.google.dev/
GEMINI_API_KEY=your-gemini-api-key-here

# Get your Mistral API key from: https://console.mistral.ai/
MISTRAL_API_KEY=your-mistral-api-key-here

# AI Configuration
# Options: gemini (default), mistral
AI_PROVIDER=gemini
# Specific model ID (leave empty for defaults)
AI_MODEL=

# Mail Configuration
# Options: useplunk (default), sendgrid, resend
MAIL_PROVIDER=useplunk
# Get your Plunk API key from: https://app.useplunk.com/settings/api-keys
MAIL_PLUNK_API_KEY=your-plunk-api-key-here
# Optional: Default from email (must be verified domain)
MAIL_FROM_EMAIL=noreply@yourdomain.com
# Optional: Default from name
MAIL_FROM_NAME=Your App Name

